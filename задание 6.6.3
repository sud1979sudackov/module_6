const userInput = prompt("Введите любое число:"); // Запрашиваем число у пользователя
const number = Number(userInput); // Преобразуем введенное значение в число

if (!isNaN(number)) { // Проверяем, что введено корректное число
  const resultArray = []; // Создаем пустой массив
  
  // Заполняем массив числами от 0 до введенного числа
  for (let i = 0; i <= number; i++) {
    resultArray.push(i);
  }
  
  console.log(resultArray); // Выводим результат в консоль
} else {
  console.log("Вы ввели не число!"); // Сообщение об ошибке, если введено не число
}
